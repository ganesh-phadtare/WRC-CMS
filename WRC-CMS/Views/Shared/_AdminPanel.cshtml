@model WRC_CMS.Models.SiteModel
<div class="row">
    <div class="row  col-md-5">
        <div id="sidebar" class="col-md-4">
            <ul>
                <li>@Html.ActionLink("Sites", "AddSite", "Site")</li>
                <li>@Html.ActionLink("Views", "AddView", "AddView")</li>
                <li>@Html.ActionLink("Content Styles", "AddContentStyle", "ContentStyle")</li>
            </ul>
        </div>
        <div class="col-md-4">
            <form name="datapluspics" method="Post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Add Site</h4>
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.URL, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.URL)
                            @Html.ValidationMessageFor(model => model.URL)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title)
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Logo, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @*@Html.TextBoxFor(model => model.Logo, new { type = "file"} )*@
                            <input type="file" name="file" />
                            @Html.ValidationMessageFor(model => model.Logo)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.IsActive)
                            @Html.ValidationMessageFor(model => model.IsActive)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="color:green">
                            @ViewBag.Message

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "GetAllSitesDetails")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
