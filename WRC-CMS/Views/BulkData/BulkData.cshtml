@model WRC_CMS.Models.BulkDataModel

@{
    ViewBag.Title = "BulkData";
}

<h2>BulkData</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>BulkDataModel</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.NoOfRecords, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoOfRecords)
                @Html.ValidationMessageFor(model => model.NoOfRecords)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Sites" name="bt1" class="btn btn-default" />&nbsp;
                <input type="submit" value="Create Views" name="bt2" class="btn btn-default" />&nbsp;
                <input type="submit" value="Create Static Contents" name="bt3" class="btn btn-default" />&nbsp;
                <input type="submit" value="Create Menus" name="bt4" class="btn btn-default" />&nbsp;
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
