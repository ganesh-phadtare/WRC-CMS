@model WRC_CMS.Models.MenuModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Menu</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.SelectSite, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectSite, new SelectList(Model.Site, "Oid", "Name", null))
                @Html.ValidationMessageFor(model => model.SelectSite)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectView, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectView, new SelectList(Model.View, "Oid", "Name", null))
                @Html.ValidationMessageFor(model => model.SelectView)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="color:green">
                @ViewBag.Message

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "GetAllMenuDetails")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
